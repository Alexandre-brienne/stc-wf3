<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% block title %}
			<title>Inscription</title>
		{% endblock %}
		{% block stylesheets %}
			<link rel="stylesheet" href="CSS/style2.css">
			<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
			<link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
		{% endblock %}

	</head>
	{% block body %}
		<body class="register-body">
			<header class="register-header ">
				<nav class="register-nav">
					<div class="register-brand-logo">
						<a href="#" class='register-a'>
							<i class="fab fa-facebook"></i>
						</a>
						<a href="#" class='register-a'>
							<i class="fab fa-twitter"></i>
						</a>
						<a href="#" class='register-a'>
							<i class="fab fa-instagram"></i>
						</a>
					</div>
					<a href="#" class='register-a'><img src="image/logo_geekandstart.png" alt="logo" class="logo-nav"></a>
					<i id="#connexion-responsive" class="las la-power-off"></i>
				</nav>
				<!-- Formulaire d'inscription -->
				<section id="all">

					<section id="register-principal1" class="principal">
						<section id="register-inscription">
							<form method="post" class="form-register">
								<div class="register-grid2">
									<div class="register-grid3">
										<label id="register-title" for="username">Pseudo</label>
										<input type="text" id="username" required placeholder="username">
									</div>
									<div class="register-grid3">
										<label class="sexe" for="sexe">
											<span id="register-title">Sexe</span>
											<select name="sexe" id="sexe" required>
												<option value="homme">Homme</option>
												<option value="femme">Femme</option>
											</select>
										</label>
									</div>
								</div>
								<div class="register-grid2">
									<div class="register-grid3">
										<label id="register-title" for="password">Mot de Passe</label>
										<input type="text" id="password" required placeholder="password">
									</div>
									<div class="register-grid3">
										<label id="register-title" for="date_naissance">Née le</label>
										<input type="date" id="date_naissance" required placeholder="date_naissance">
									</div>
								</div>
								<!-- Vérification email -->
								<div class="register-grid2">
									<div class="register-grid3">
										<label id="register-title" for="email1">Email</label>
										<input type="email" id="email1" required placeholder="email">
									</div>
									<div class="register-grid3">
										<label id="register-title" for="email2">Confirmer Email</label>
										<input type="text" id="email2" required placeholder="email">
									</div>
								</div>
								<label for="cgu">
									<input type="checkbox">
									<span class="accept-cgu">Je certifie avoir plus de 18ans;<br>Et confirme avoir lu et accepté les conditions
										<a class='register-a' class="cgu" href="#">générale d'utilisation.</a>
									</span>
								</label>
								<button type="submit" id="rejoindre">Rejoins-Nous!</button>
							</form>
							<a class='register-a' id="ButtonContact-Rejoindre" href="#">Nous Contacter</a>
						</section>
					</section>

					<!-- Se Connecter -->

					<section id="register-principal2" class="principal">
						<section id="register-connexion">
							<h1 class="register-h1">Déjà membre?</h1>
							<h1 class="register-h1">Connecte toi.</h1>
						</section>
						<!-- Formulaire Connexion -->
						<section id="register-connexion2">
							<form method="post" class="form-register">
								<div>
									<div>
										<label id="register-title" for="username">Pseudo</label>
										<input type="text" id="username" required placeholder="username">
									</div>
									<div>
										<label id="register-title" for="password">Mot de Passe</label>
										<input type="text" id="password" required placeholder="password">
									</div>
								</div>
								<!-- Valider connexion -->
								<button type="submit" id="connecté">Connexion</button>
							</form>
						</section>
					</section>
				</section>

			</header>
			<script src="https://kit.fontawesome.com/e4895b9a2a.js" crossorigin="anonymous"></script>

			{% block footer %}{% endblock %}

		</body>
	{% endblock %}
	{% block javascripts %}{% endblock %}
</html>
