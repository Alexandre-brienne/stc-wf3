                    <li class="profil_li"><a href="#" class="profil_deconnexion">Déconnexion</a></li>
                </ul>

            </section>
        </nav>
    </header>


    <main class="profil_main_info">

        <section>

            <div class="profil_info_membre">

                <img src="image/profil.png" alt="photoprofil" class="photo_membre">
                <div class="profil_button">
                    <button type="button" class="btn btn-light"><span class="profil_modif">Modifier le profil</span></button>
                    <button type="button" class="btn btn-light"><i class="las la-envelope profil_i"></i></button>
                </div>
                <div class="profil_identite">
                    <div class="profil_prenom">
                        <div>
                            <p class="profil_name">Lorem</p>
                            <p>Marseille</p>
                        </div>
                        <div>
                            <p>25ans</p>
                        </div>
                    </div>

                    <p>Situation Amoureuse : Célibataire</p>
                    <p>Pays de résidence : France</p>
                    <p>Taille : 170 cm</p>
                    <p>Cheveux : Blond</p>
                    <p>Yeux : Verts</p>
                    <p>Fumeur : non</p>
                    <p>Signe Astrologique : Lion</p>
                </div>
                <div class="profil_interets">
                    <h2 class="profil_titre_interets">Centres d'intérêts</h2>
                    <div class="profil_preferences">
                        <div>
                            <p>Cinema</p>
                        </div>
                        <div>
                            <p>Comics/Bd</p>
                        </div>
                    </div>
                </div>

            </div>
